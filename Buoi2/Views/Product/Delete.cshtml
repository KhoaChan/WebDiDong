@model Buoi2.Models.Product

<!-- Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    body {
        background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .delete-container {
        background: #fff;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        max-width: 500px;
        width: 100%;
        text-align: center;
        animation: fadeInDown 0.8s ease-out;
    }

    .delete-title {
        color: #2c3e50;
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .delete-message {
        color: #6c757d;
        font-size: 1.2rem;
        margin-bottom: 2rem;
        font-weight: 400;
    }

        .delete-message strong {
            color: #ff4b2b;
            font-weight: 600;
        }

    .btn-delete {
        background: linear-gradient(45deg, #ff4b2b, #ff416c);
        border: none;
        border-radius: 25px;
        padding: 0.8rem 2rem;
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        width: 100%;
        max-width: 200px;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background: linear-gradient(45deg, #ff416c, #ff4b2b);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 65, 108, 0.4);
        }

    .btn-cancel {
        background: #dfe6e9;
        color: #2c3e50;
        border: none;
        border-radius: 25px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        font-size: 1.1rem;
        width: 100%;
        max-width: 200px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-top: 1rem;
    }

        .btn-cancel:hover {
            background: #b2bec3;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
</style>

<div class="container">
    <div class="delete-container animate__animated animate__fadeInDown">
        <h2 class="delete-title">Delete Product</h2>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <p class="delete-message">Are you sure you want to delete <strong>@Model.Name</strong>?</p>
            <button type="submit" class="btn-delete">Delete</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </form>
    </div>
</div>