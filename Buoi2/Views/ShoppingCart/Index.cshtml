@model ShoppingCart

@{
    ViewData["Title"] = "Giỏ hàng";
}

<!-- Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .cart-container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        animation: fadeInUp 0.6s ease-out;
    }

    .cart-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid #eee;
        padding-bottom: 0.5rem;
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2rem;
    }

        .cart-table th {
            background: linear-gradient(45deg, #6c5ce7, #a29bfe);
            color: white;
            padding: 1rem;
            text-align: left;
        }

        .cart-table td {
            padding: 1rem;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .cart-table tr:hover {
            background-color: #f8f9fa;
        }

    .btn-back {
        background: #6c757d;
        color: white;
        border: none;
        border-radius: 25px;
        padding: 0.5rem 1.5rem;
        margin-right: 1rem;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

    .btn-checkout {
        background: linear-gradient(45deg, #00b894, #55efc4);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-checkout:hover {
            background: linear-gradient(45deg, #55efc4, #00b894);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 184, 148, 0.3);
        }

    .btn-remove {
        color: #e74c3c;
        background: none;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-remove:hover {
            color: #c0392b;
            transform: scale(1.1);
        }

    .total-row {
        font-weight: bold;
        background-color: #f1f1f1;
    }

    .empty-cart {
        text-align: center;
        padding: 2rem;
        color: #7f8c8d;
    }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        margin-top: 1rem;
    }
</style>

<div class="cart-container animate__animated animate__fadeInUp">
    <h2 class="cart-title">
        <i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn
    </h2>

    @if (Model.Items.Any())
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr class="animate__animated animate__fadeIn">
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("N0") đ</td>
                        <td>@((item.Price * item.Quantity).ToString("N0")) đ</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn-remove">
                                <i class="fas fa-trash-alt"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
                <tr class="total-row">
                    <td colspan="3" class="text-right"><strong>Tổng cộng:</strong></td>
                    <td><strong>@Model.Items.Sum(i => i.Price * i.Quantity).ToString("N0") đ</strong></td>
                    <td></td>
                </tr>
            </tbody>
        </table>

        <div class="action-buttons">
            <a asp-action="Index" asp-controller="Home" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
            </a>
            <a asp-action="Checkout" class="btn btn-checkout">
                <i class="fas fa-credit-card"></i> Thanh toán
            </a>
        </div>
    }
    else
    {
        <div class="empty-cart animate__animated animate__fadeIn">
            <i class="fas fa-shopping-cart fa-3x mb-3"></i>
            <h3>Giỏ hàng của bạn đang trống</h3>
            <a asp-action="Index" asp-controller="Home" class="btn btn-back mt-3">
                <i class="fas fa-arrow-left"></i> Quay lại mua sắm
            </a>
        </div>
    }
</div>